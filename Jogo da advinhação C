#include <stdio.h>

int main() {
    printf("********************\n");
    printf("*Jogo da advinhaçõ** \n");
    printf("********************\n");
    
    int numerosecreto = 42;
    int chute;
    printf("Qual seu chute?: \n");
    scanf("%d",&chute);
    printf("seu chute foi %d \n", chute);
    
    if(chute == numerosecreto){
        printf("Acertou! \n");
    }else{
        if(chute > numerosecreto){
        printf("O chute foi maior que o número secreto \n");
        }
        if(chute < numerosecreto){
        printf("O seu chute foi menor igual sua inteligêngia \n");
        }
        printf("Burro! Animal desprovido de hábilidades cognitivas básicas \n");
    }
    


    return 0;
}
